int EsMenor2(int x int y){
	return x<y
}
void Intercambia2(int *e1,int *e2){//Los valores se mandan desde el main con un & para que traigan su direccion de memoria
	int Vessel;
	Vessel=*e1; *e1=*e2; *e2=Vessel;
}
